    <script>
        // Global variables
        let currentHydrationML = 2100;
        const hydrationGoalML = 3500;

        // Page navigation
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-section').forEach(page => {
                page.classList.remove('active');
            });
            
            // Remove active class from all nav links
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
            
            // Set active nav link
            const linkMap = {
                'dashboard': 'dashboardLink',
                'nutrition-analysis': 'nutritionLink', 
                'meal-planning': 'mealPlanLink',
                'performance': 'performanceLink'
            };
            
            if (linkMap[pageId]) {
                document.getElementById(linkMap[pageId]).classList.add('active');
            }
        }

        // Tab navigation for meal planning
        function showTab(tabId) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Remove active class from all tab buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabId).classList.add('active');
            
            // Set active tab button
            event.target.classList.add('active');
        }

        // Hydration tracking
        function addHydration(amount) {
            currentHydrationML += amount;
            if (currentHydrationML > hydrationGoalML) {
                currentHydrationML = hydrationGoalML;
            }
            updateHydrationDisplay();
        }

        function resetHydration() {
            currentHydrationML = 0;
            updateHydrationDisplay();
        }

        function updateHydrationDisplay() {
            const currentL = (currentHydrationML / 1000).toFixed(1);
            const remainingML = Math.max(0, hydrationGoalML - currentHydrationML);
            const remainingL = (remainingML / 1000).toFixed(1);
            const percentage = Math.min(100, (currentHydrationML / hydrationGoalML) * 100);
            
            document.getElementById('currentHydration').textContent = `${currentL}L`;
            document.getElementById('remainingHydration').textContent = `${remainingL}L`;
            document.getElementById('hydrationFill').style.width = `${percentage}%`;
            
            // Add celebration effect when goal reached
            if (currentHydrationML >= hydrationGoalML) {
                document.getElementById('hydrationFill').style.background = '#22d3ee';
                setTimeout(() => {
                    alert('🎉 Congratulations! You\'ve reached your daily hydration goal!');
                }, 100);
            }
        }

        // Nutrition analysis calculator
        function updateAnalysis() {
            const weight = parseFloat(document.getElementById('weight').value) || 65;
            const height = parseFloat(document.getElementById('height').value) || 170;
            const intensity = document.getElementById('intensity').value;
            const phase = document.getElementById('phase').value;
            
            // Calculate BMR (Mifflin-St Jeor equation for females)
            const bmr = (10 * weight) + (6.25 * height) - (5 * 20) - 161; // Assuming age 20
            
            // Activity multipliers
            const activityMultipliers = {
                'moderate': 1.7,
                'high': 1.9,
                'elite': 2.1
            };
            
            const calories = Math.round(bmr * activityMultipliers[intensity]);
            
            // Phase-specific macro ratios
            const macroRatios = {
                'training': { carbs: 0.55, protein: 0.20, fat: 0.25 },
                'tapering': { carbs: 0.60, protein: 0.18, fat: 0.22 },
                'competition': { carbs: 0.65, protein: 0.15, fat: 0.20 },
                'recovery': { carbs: 0.50, protein: 0.25, fat: 0.25 }
            };
            
            const ratios = macroRatios[phase];
            
            const carbCals = calories * ratios.carbs;
            const proteinCals = calories * ratios.protein;
            const fatCals = calories * ratios.fat;
            
            const carbGrams = Math.round(carbCals / 4);
            const proteinGrams = Math.round(proteinCals / 4);
            const fatGrams = Math.round(fatCals / 9);
            
            // Update display
            document.getElementById('calorieTarget').textContent = calories.toLocaleString();
            document.getElementById('proteinTarget').textContent = `${proteinGrams}g`;
            document.getElementById('carbTarget').textContent = `${carbGrams}g`;
            document.getElementById('fatTarget').textContent = `${fatGrams}g`;
            
            // Update recommendations
            updatePhaseRecommendations(phase, weight, carbGrams, proteinGrams);
        }

        function updatePhaseRecommendations(phase, weight, carbGrams, proteinGrams) {
            const recommendations = {
                'training': {
                    message: 'Training Phase Active: Focus on consistent carb intake and adequate protein for recovery.',
                    tips: [
                        'Eat 30-60g carbs 1-3 hours before training',
                        'Consume protein + carbs within 30 minutes post-training',
                        'Maintain steady energy with complex carbs',
                        'Include anti-inflammatory foods (berries, fatty fish)'
                    ]
                },
                'tapering': {
                    message: 'Tapering Phase: Increase carb percentage while reducing overall volume.',
                    tips: [
                        'Begin carb loading protocol (8-10g/kg body weight)',
                        'Reduce fiber intake gradually',
                        'Focus on familiar foods only',
                        'Maintain hydration levels'
                    ]
                },
                'competition': {
                    message: 'Competition Phase: Optimize digestion and fuel availability.',
                    tips: [
                        'Eat 3-4 hours before racing',
                        'Top off carbs 1-2 hours before',
                        'Avoid high-fiber and high-fat foods',
                        'Stay hydrated but avoid overdrinking'
                    ]
                },
                'recovery': {
                    message: 'Recovery Phase: Prioritize protein and rehydration.',
                    tips: [
                        'Consume 20-25g protein within 2 hours',
                        'Include carbs to replenish glycogen',
                        'Focus on anti-inflammatory foods',
                        'Rehydrate with electrolytes'
                    ]
                }
            };
            
            const rec = recommendations[phase];
            const recElement = document.getElementById('phaseRecommendations');
            
            recElement.innerHTML = `
                <div class="success-message">
                    <strong>${rec.message}</strong>
                </div>
                <ul style="margin-left: 1.5rem; margin-top: 1rem;">
                    ${rec.tips.map(tip => `<li>${tip}</li>`).join('')}
                </ul>
            `;
        }

        // Add fade-in animation to elements
        function addFadeInAnimation() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in');
                    }
                });
            });

            document.querySelectorAll('.performance-card, .analytics-card, .meal-planning-tools').forEach(el => {
                observer.observe(el);
            });
        }

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            // Update nutrition analysis on load
            updateAnalysis();
            
            // Add animations
            addFadeInAnimation();
            
            // Add some interactive touches
            document.querySelectorAll('.btn').forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Simulate real-time updates
            setInterval(() => {
                const timeElements = document.querySelectorAll('.timeline-time');
                timeElements.forEach(el => {
                    if (el.textContent.includes('20')) {
                        el.parentElement.classList.add('pulse');
                        setTimeout(() => {
                            el.parentElement.classList.remove('pulse');
                        }, 2000);
                    }
                });
            }, 30000);
        });
    </script>
</body>
</html>
